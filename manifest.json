{
  "manifest_version": 3,
  "name": "اذكاري (Adhkariy)",
  "version": "1.0.0",
  "description": "اذكر الله بأذكارك المناسبة طوال يومك",
  "permissions": ["notifications", "alarms", "storage", "activeTab", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/Adhkariy16.png",
      "32": "icons/Adhkariy32.png",
      "48": "icons/Adhkariy48.png",
      "128": "icons/Adhkariy128.png"
    }
  },
  "icons": {
    "16": "icons/Adhkariy16.png",
    "32": "icons/Adhkariy32.png",
    "48": "icons/Adhkariy48.png",
    "128": "icons/Adhkariy128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
